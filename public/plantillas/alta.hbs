{{!-- {{#if validos}}
    <td>Datos Válidos</td>
{{else}}
    <td>Datos NO Válidos</td>
{{/if}} --}}
{{#if productos.length }}
    <table>
        <tr>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Envio</th>
            <th>Categoria</th>
            <th>Detalles</th>
            <th>Foto</th>
            <th>Acción</th>
        </tr>
        {{#each productos}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{marca}}</td>
                <td>{{precio}}</td>
                <td>{{stock}}</td>
        {{#if envio}}
          <td>Si</td>
        {{else}}
          <td>No</td>
        {{/if}}
        <td>
          {{#switch categoria}}
            {{#case "1"}} Audio {{/case}}
            {{#case "2"}} Camaras {{/case}}
            {{#case "3"}} Celulares {{/case}}
            {{#case "4"}} Gadgets {{/case}}
            {{#case "5"}} TV {{/case}}
          {{/switch}}
        </td>                <td>{{detalles}}</td>
                <td>
                    <img style="display:block; margin: 0 auto;" src="{{foto}}" width="50" alt="{{nombre}}"> 
                </td>
                <td>
                    {{#if ../validos}}
                        <button onclick="productController.actualizarProducto('{{id}}')">Actualizar</button>
                    {{else}}
                        <button disabled onclick="productController.actualizarProducto('{{id}}')">Actualizar</button>
                    {{/if}}
                    <button onclick="productController.productDelete('{{id}}')">Borrar</button>
                </td>
            </tr>
        {{/each}}
    </table>
{{else}}
    <h2>No se encontraron productos</h2>
{{/if}}